<div class="text-center">
    <h2>{{title}}</h2>
    <p>{{post_content}}</p>
    <p>Created by {{user.username}} on {{format_date date_created}}</p>
</div>
<input id="comment-body">

<button id="comment-button">
    Add comment

</button>
{{#if comments}}
<div class="col-md-6 project-list">
    <h3>Comments:</h3>

    {{#each comments}}
    <div class="row mb-2">
        <div class="col-md-8">
        </div>
        <p>{{comment_body}}</p>

        <p>Created by {{user.username}} on {{date_created}}</p>
        <div class="col-md-4">
            {{!-- <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button> --}}
        </div>
    </div>
    {{/each}}
</div>
{{/if}}
</div>
<script src="/js/comment.js"></script>